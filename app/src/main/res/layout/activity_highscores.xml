<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_highscores"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quizgame.HighscoresActivity"
    android:background="@drawable/quiz_bg">


    <TextView
        android:text="High Scores"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:id="@+id/highscoretitle"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"/>

    <!--first highscore-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/highscoretitle"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/firstscorelayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstname"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstscore"
            android:layout_alignParentEnd="true"

            android:text=""
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <!--second high score-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/firstscorelayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/secondscorelayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondname"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondscore"
            android:layout_alignParentEnd="true"

            android:text=""
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <!--third highscore-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/secondscorelayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/thirdscorelayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdname"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/thirdscore"
            android:layout_alignParentEnd="true"

            android:text=""
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <!--fourth highscore-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/thirdscorelayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/fourthscorelayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourthname"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fourthscore"
            android:layout_alignParentEnd="true"

            android:text=""
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <!--fifth highscore-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/fourthscorelayout"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/fifthscorelayout"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthname"
            android:text=""
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fifthscore"
            android:layout_alignParentEnd="true"

            android:text=""
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>

    <Button
        android:text="OK"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/okBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/commonbutton"
        android:onClick="onOKBtnClick"
        />
</RelativeLayout>
