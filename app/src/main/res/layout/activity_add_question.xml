<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quizgame.AddQuestionActivity">

     <TextView
            android:text="Add Your Question"
            android:layout_width="match_parent"
         android:id="@+id/questionTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:fontFamily="serif"
            android:typeface="serif"
            android:textSize="24sp"
            android:lineSpacingExtra="8sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:padding="8dp"
         android:gravity="center_vertical"
         android:layout_height="80dp"
         android:layout_marginBottom="15dp" />

     <TextView
            android:text="Question"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:id="@+id/question"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/questionTitle"
            android:fontFamily="sans-serif"
         android:gravity="center_vertical|center_horizontal" />

    <EditText
        android:layout_height="100dp"
        android:id="@+id/questionText"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/questionTitle"
        android:background="@drawable/edittextbg"
        android:layout_width="0dp"
        android:layout_toEndOf="@id/question"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/radio_group"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/imagePreview"
        android:layout_toEndOf="@+id/answer">
        <RadioButton android:id="@+id/radio_true"
            android:layout_width="104dp"
            android:text="True"
            android:onClick="onRadioButtonClicked" />
        <RadioButton android:id="@+id/radio_false"
            android:layout_width="104dp"
            android:text="False"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/chooseImageText"
        android:text="Choose Image"
        android:layout_alignBottom="@+id/chooseImageBtn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/questionText"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/answer"
        android:text="Answer"
        android:layout_alignParentStart="true"
        android:elevation="1dp"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/radio_group" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/questionText"
        android:layout_toEndOf="@+id/chooseImageText"
        android:layout_toStartOf="@id/chooseImageBtn"
        android:id="@+id/imagePreview"
        android:layout_marginTop="15dp"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/edittextbg" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/ic_add_image"
        android:layout_below="@+id/questionText"
        android:layout_alignParentEnd="true"
        android:id="@+id/chooseImageBtn"
        android:background="@android:color/transparent"
        android:layout_marginTop="15dp"
        android:onClick="onAddPhotoBtnClick"
        android:layout_marginLeft="15dp" />

    <Button
        android:text="Add"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:background="@drawable/commonbutton"
        android:onClick="onAddBtnClick"
        />


</RelativeLayout>
